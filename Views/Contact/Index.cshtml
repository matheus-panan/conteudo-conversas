@model List<painel_conversas.Models.ContactItem>

<h2>Lista de Contatos</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>CPF</th>
            <th>Nota</th>
            <th>Última Atividade</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@(contact.Name ?? "N/A")</td>
                <td>@(contact.Phone ?? "N/A")</td>
                <td>@(contact.Email ?? "N/A")</td>
                <td>@(contact.IdentificationDocument ?? "N/A")</td>
                <td>@(contact.Note ?? "N/A")</td>
                <td>
                    @if (!string.IsNullOrEmpty(contact.LastActivity))
                    {
                        @DateTime.Parse(contact.LastActivity).ToString("dd/MM/yyyy HH:mm")
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Index", "Chat", new { contactId = contact.Id })"
                       class="btn btn-primary btn-sm">Ver Conversas</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="mt-3">
        <p class="text-muted">Total de contatos: @Model.Count</p>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Nenhum contato encontrado</h4>
        <p>Não foi possível carregar a lista de contatos. Verifique:</p>
        <ul>
            <li>Se a API está respondendo corretamente</li>
            <li>Se o token de autenticação está válido</li>
            <li>Se há contatos cadastrados no sistema</li>
        </ul>
    </div>
}

